{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Compile Resource File",
        "type": "shell",
        "command": "windres",
        "args": [
          "ico.rc",
          "-O",
          "coff",
          "-o",
          "ico.o"
        ]
      },
      {
        "label": "Build C++ Executable",
        "type": "shell",
        "command": "g++",
        "args": [
          "pswd_tiny.cpp",
          "ico.o",
          "-o",
          "pswd_tiny.exe",
          "-mwindows"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      }
    ]
  }
  